<% if @feed_items.any? %>
  <ol class="microposts">
    <!-- @feed_itemsの各要素がMicropostクラスを持っているため、Micropostのパーシャルを呼び出すことができる -->
    <!-- Railsは対応する名前のパーシャルを、渡されたリソースのディレクトリ内から探しにいくことができる -->
    <!-- app/views/microposts/_micropost.html.erb が呼び出される -->
    <%= render @feed_items %>
  </ol>
  <%= will_paginate @feed_items,
                    params: { controller: :static_pages, action: :home } %>
<% end %>
