<% provide(:title, "Forgot password") %>
<h1>Forgot password</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% # scopeをシンボルを使って指定することで送信先のアクションでパラメータを明示的に受け取ることができる %>
    <% # <input class="form-control" type="email" name="password_reset[email]" id="password_reset_email"> となる(nameが変わる) %>
    <%= form_with(url: password_resets_path, scope: :password_reset,
                    local: true) do |f| %>
      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
